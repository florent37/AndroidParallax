            <include layout="@layout/card_view" />

            <include layout="@layout/card_view" />

            <include layout="@layout/card_view" />

            <include layout="@layout/card_view" />

        </LinearLayout>

    </FrameLayout>

</com.github.florent37.parallax.ScrollView>
